@model TesteAgrotis.Models.Pedido

<div class="mb-4">
    <h2>Detalhes do Pedido</h2>
</div>

<div class="row mb-3">
    <div class="col-md-2">
        <label asp-for="Id" class="form-label">Cód. Pedido</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="col-md-2">
        <label asp-for="DataEmissao" class="form-label">Data de Emissão</label>
        <input asp-for="DataEmissao" class="form-control" readonly />
    </div>
    <div class="col-md-8">
        <label asp-for="Cliente.Nome" class="form-label">Nome do Cliente</label>
        <input asp-for="Cliente.Nome" class="form-control" readonly />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label asp-for="PrecoTotalPedido" class="form-label">Preço Total do Pedido</label>
        <input asp-for="PrecoTotalPedido" class="form-control" readonly />
    </div>
    <div class="col-md-6">
        <label asp-for="PesoTotalPedido" class="form-label">Peso Total do Pedido</label>
        <input asp-for="PesoTotalPedido" class="form-control" readonly />
    </div>
</div>

<div class="col-md-12 mb-3">
    <label asp-for="Observacao" class="form-label">Observação</label>
    <textarea asp-for="Observacao" class="form-control" readonly></textarea>
</div>

<div class="mb-4 text-center">
    <h3>Itens do Pedido</h3>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Cód. Produto</th>
                <th scope="col">Nome Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Peso Total</th>
                <th scope="col">Valor Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.ProdutoId</td>
                    <td>@item.Produto.Nome</td>
                    <td>@item.Quantidade</td>
                    <td>@item.PesoTotal</td>
                    <td>@item.ValorTotal</td>
                </tr>
            }
        </tbody>
    </table>
</div>


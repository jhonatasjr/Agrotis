@model IEnumerable<TesteAgrotis.Models.Pedido>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Pedidos</h2>
    <a asp-action="Novo" class="btn btn-primary">Novo Pedido</a>
</div>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">N° do Pedido</th>
                <th scope="col">Cliente</th>
                <th scope="col">Dt Emissão</th>
                <th scope="col">Peso Total Pedido</th>
                <th scope="col">Preço Total Pedido</th>
                <th scope="col" class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">Não existem pedidos cadastrados.</td>
                </tr>
            }
            else
            {
                @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@pedido.Id</td>
                        <td>@pedido.Cliente.Nome</td>
                        <td>@pedido.DataEmissao</td>
                        <td>@pedido.PesoTotalPedido</td>
                        <td>@pedido.PrecoTotalPedido</td>
                        <td class="text-center">
                            <a asp-action="Detalhes" asp-route-id="@pedido.Id" class="btn btn-info">Detalhes</a>
                            <a asp-action="Excluir" asp-route-id="@pedido.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>